<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black">

    <com.lifengqiang.video.ui.main.home.view.VerticalLooperVideoContainer
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/state_bar_fill"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_add_circle_outline_24"
                app:tint="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/follow"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recommend"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/ic_search"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="84dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_head_white_border">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/head"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/ic_launcher_background" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <ImageView
                android:id="@+id/add_follow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/ic_add_follow" />

        </FrameLayout>

        <ImageView
            android:id="@+id/like"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_love_true" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="100" />

        <ImageView
            android:id="@+id/remark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:padding="3dp"
            android:src="@drawable/ic_remark" />

        <TextView
            android:id="@+id/remark_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="100" />

        <ImageView
            android:id="@+id/collect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:padding="3dp"
            android:src="@drawable/ic_collect_true" />

        <TextView
            android:id="@+id/collect_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="100" />

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="64dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#AAFFFFFF"
        android:textSize="16sp"
        tools:text="adfa反对恢复打赏放大沙发沙发的法大师傅大师傅adfa反对恢复打赏放大沙发沙发的法大师傅大师傅adfa反对恢复打赏放大沙发沙发的法大师傅大师傅adfa反对恢复打赏放大沙发沙发的法大师傅大师傅adfa反对恢复打赏放大沙发沙发的法大师傅大师傅adfa反对恢复打赏放大沙发沙发的法大师傅大师傅adfa反对恢复打赏放大沙发沙发的法大师傅大师傅adfa反对恢复打赏放大沙发沙发的法大师傅大师傅" />

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    tools:background="@color/black">

    <RadioGroup
        android:id="@+id/camera_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mode_video"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_record_mode_label_background"
            android:button="@null"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/record_mode_label_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/mode_image"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_record_mode_label_background"
            android:button="@null"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/record_mode_label_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/photo_album"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="48dp"
            android:gravity="center"
            android:text="相册"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:src="@drawable/ic_camera_record_start" />

        <ImageView
            android:id="@+id/flip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="48dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_flip_camera_android_24"
            app:tint="@color/white" />

    </FrameLayout>

</FrameLayout>